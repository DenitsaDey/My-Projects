@model IEnumerable<HealthHub.Web.ViewModels.Doctor.DoctorsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_AdminHeaderPartial" />

<h1>Doctors</h1>

<p>
    <a class="appointment-btn scrollto" asp-action="Create">Add New Doctor</a>
</p>
<table class="table table-bordered table-hover" style="background-color:white">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Clinic
            </th>
            <th>
                Specialty
            </th>
            <th>
                Years of Experience
            </th>
            <th>
               Works With Children
            </th>
            <th>
                Online Consultations
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClinicName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialtyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsOFExperience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorksWithChildren)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnlineConsultation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-doctorId="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
