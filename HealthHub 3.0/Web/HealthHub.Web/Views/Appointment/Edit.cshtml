@model AppointmentEditInputModel
@{
    this.ViewData["Title"] = "Edit your appointment message";
}

<partial name="_HeaderPartial" />

<section id="appointment" class="appointment section-bg">

    <div class="row row-eq-height">

        <div class="container">

            <div class="section-title">
                <form method="post" class="col-md-6 offset-md-3"
                      enctype="multipart/form-data">
                    <h1>Type your new message:</h1>
                    <div class="form-group mt-3">
                        <textarea asp-for="Message" class="form-control" rows="5" placeholder="@Model.Message"></textarea>
                        <span asp-validation-for="Message" class="small text-danger"></span>
                    </div>
                    <input type="submit" value="Submit" class="appointment-btn scrollto" />
                    <a asp-area="" asp-controller="Appointment" asp-action="Details" asp-route-appointmentId="@Model.Id">
                       
                    </a>
                </form>
            </div>
        </div>
    </div>
    </section>
