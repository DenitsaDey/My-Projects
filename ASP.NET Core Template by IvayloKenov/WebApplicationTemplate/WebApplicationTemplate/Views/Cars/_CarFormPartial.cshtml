@model CarInputModel

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Add Car</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Brand">Car brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Your car brand here...">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model">Car model</label>
                    <input asp-for="Model" class="form-control" placeholder="Your car model here...">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl">Image Url</label>
                    <input asp-for="ImgUrl" class="form-control" placeholder="What does your car look like?">
                    <span asp-validation-for="ImgUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Car description</label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Tell us about your car here..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year">Car year</label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="CheckBoxExample">
                    <label asp-for="CheckBoxExample">I agree with ... </label>
                    <span asp-validation-for="CheckBoxExample" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>